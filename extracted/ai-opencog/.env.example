# Environment Configuration Template
# Copy this file to .env and modify the values for your environment

# Application Environment
NODE_ENV=production
AI_OPENCOG_ENVIRONMENT=production

# Logging Configuration
AI_OPENCOG_LOG_LEVEL=warn
AI_OPENCOG_DEBUG=false

# Performance Settings
AI_OPENCOG_CACHE_SIZE=5000
AI_OPENCOG_MAX_CONCURRENCY=50
AI_OPENCOG_MEMORY_LIMIT=8192

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=opencog
POSTGRES_USER=opencog
POSTGRES_PASSWORD=opencog123

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring Configuration
AI_OPENCOG_METRICS_ENABLED=true
AI_OPENCOG_METRICS_INTERVAL=60000
AI_OPENCOG_ALERTING_ENABLED=true

# Security Configuration
AUTH_ENABLED=true
AUTH_CLIENT_ID=your_client_id
AUTH_CLIENT_SECRET=your_client_secret
JWT_SECRET=your_jwt_secret

# External Services
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_PASSWORD=admin123
ELASTICSEARCH_URL=http://elasticsearch:9200

# Deployment Configuration
CONTAINER_REGISTRY=your-registry.com
IMAGE_TAG=latest
DEPLOYMENT_ENVIRONMENT=production
AUTO_SCALING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Community Features
COMMUNITY_FEATURES_ENABLED=true
FEEDBACK_COLLECTION_ENABLED=true
ENHANCEMENT_VOTING_ENABLED=true
CONTRIBUTION_UPLOADS_ENABLED=true

# Cognitive Services Configuration
REASONING_TIMEOUT=10000
LEARNING_ADAPTATION_RATE=0.1
KNOWLEDGE_BASE_MAX_SIZE=1000000
INFERENCE_CACHE_ENABLED=true

# Development Settings (for development environment)
# DEV_HOT_RELOAD=true
# DEV_SOURCE_MAPS=true
# DEV_MOCK_SERVICES=false